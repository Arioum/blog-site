<%- include("partials/header") -%>
  <h1>Compose</h1>
  <form class="compose-form" action="/publish" method="post">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input class="form-control" type="text" name="postTitle">
    </div>
    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" name="postContent" cols="30" rows="5"></textarea>
    </div>
    <button class="btn-primary btn" type="submit">Publish</button>
  </form>
  <%- include("partials/footer") -%>